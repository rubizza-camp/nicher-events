{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/events/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type": "string",
          "required": true
        }
      ],
      "get": {
        "summary": "Retrieves an event",
        "tags": [
          "Events"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "event found",
            "schema": {
              "type": "object",
              "status_enum": [
                "social",
                "confidential"
              ],
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "date": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "status_enum"
                }
              },
              "required": [
                "id",
                "name",
                "status",
                "date",
                "description"
              ]
            }
          },
          "404": {
            "description": "blog not found"
          }
        }
      }
    }
  }
}